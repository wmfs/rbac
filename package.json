{
  "name": "@wmfs/rbac",
  "version": "0.0.0-semantically-released",
  "description": "Role Based Access Control provider",
  "author": "West Midlands Fire Service",
  "homepage": "https://github.com/wmfs/rbac#readme",
  "keywords": [
    "tymly",
    "package",
    "rbac",
    "access-control"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wmfs/rbac.git"
  },
  "bugs": {
    "url": "https://github.com/wmfs/rbac/issues"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-subset": "1.6.0",
    "codecov": "3.0.2",
    "cz-conventional-changelog": "2.1.0",
    "mocha": "5.2.0",
    "nyc": "12.0.2",
    "semantic-release": "^15.5.2",
    "standard": "11.0.1"
  },
  "scripts": {
    "lint": "standard",
    "test": "nyc mocha && standard",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "build",
          "scope": "deps",
          "release": "minor"
        },
        {
          "type": "build",
          "scope": "deps-dev",
          "release": "patch"
        }
      ]
    }
  }
}
